                <div class="card-body">

                  <form action="/create" method="post" enctype="multipart/form-data">
                    <!-- Title -->
                    <div class="form-group">
                      <label for="title">Title</label>
                      <input type="text" class="form-control" name="title" id="title" required>
                    </div>

                    <!-- Subtitle -->
                    <div class="form-group">
                      <label for="subtitle">Sub-Title</label>
                      <input type="text" class="form-control" name="subtitle" id="subtitle" required>
                    </div>

                    <!-- Background image -->
                    <div class="form-group">
                      <label for="image">Background Image</label>
                      <input type="file" class="form-control" name="image" id="image" required>
                    </div>

                    <!-- Overlay -->
                    <div class="form-group">
                      <label for="overlay">Overlay</label>
                      <select name="overlay" id="overlay" class="form-control">
                        <option value="true" selected>Yes</option>
                        <option value="false">No</option>
                      </select>
                    </div>

                    <!-- Video Section -->
                    <h4>Video Section</h4>
                    <div class="form-group">
                      <label for="videoHref">Video URL</label>
                      <input type="text" class="form-control" name="videoHref" id="videoHref">
                    </div>
                    <div class="form-group">
                      <label for="videoText">Video Text</label>
                      <input type="text" class="form-control" name="videoText" id="videoText" value="See Workout Video">
                    </div>
                    <div class="form-group">
                      <label for="videoIcon">Video Icon Class</label>
                      <input type="text" class="form-control" name="videoIcon" id="videoIcon" value="fa fa-play">
                    </div>

                    <!-- Join Button -->
                    <h4>Join Button</h4>
                    <div class="form-group">
                      <label for="joinText">Button Text</label>
                      <input type="text" class="form-control" name="joinText" id="joinText" value="Join Now">
                    </div>
                    <div class="form-group">
                      <label for="joinHref">Button Link</label>
                      <input type="text" class="form-control" name="joinHref" id="joinHref" value="/signup">
